<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/notification_bg"
    >

    <!-- icon -->
    <TextView
        android:id="@+id/favsearch_item_id"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="end"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="icon"
        android:textSize="14dp"
        android:textColor="#4f628e"
        android:text="3 )"
        />

    <!-- title -->
    <TextView
        android:id="@+id/favsearch_item_title"
        android:layout_width="fill_parent"
        android:layout_toRightOf="@+id/favsearch_item_id"
        android:layout_alignBaseline="@+id/favsearch_item_id"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:text="Mon titre Ã  chercher"
        android:textSize="14dp" />

</RelativeLayout>