<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="match_parent"
tools:context="fr.scaron.sfreeboxtools.activity.FavSearchSettingsActivity" >

<android.support.v7.widget.RecyclerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favsearchRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavSearchSettingsActivity"
    />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favsearchAddToList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_plus_sign"
        tools:layout_anchor="@id/favsearchAddToList"
        tools:layout_anchorGravity="bottom|right|end" />
</RelativeLayout>